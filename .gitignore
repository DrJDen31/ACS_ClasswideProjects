.ipynb_checkpoints/
*.ipynb

# IDE
.vscode/
.idea/
*.code-workspace

# CMake
CMakeFiles/
CMakeCache.txt
cmake_install.cmake
Makefile

# Compiled binaries
*.exe
*.out
*.o
*.obj
*.a
*.lib
*.so
*.dll
*.dylib

# Logs
*.log

# Temporary files
*.tmp
*.swp
*.swo
*~
.DS_Store
Thumbs.db

# OS files
*.bak
*.orig
